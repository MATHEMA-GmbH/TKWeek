<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp">

    <com.thomaskuenneth.tkweek.util.BorderView
        android:id="@+id/appointment_two_line_color"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:background="#ff000000" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/appointment_two_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/appointment_two_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_two_line_1"
            android:layout_alignStart="@id/appointment_two_line_1"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>